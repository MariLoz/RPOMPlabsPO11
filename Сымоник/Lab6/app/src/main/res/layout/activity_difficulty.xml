<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Заголовок с тенью -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите сложность"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <!-- Легкий уровень -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#20234A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="#3D5AFE"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/easyButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Легкий"
                    android:textSize="18sp"
                    android:textColor="#3D5AFE"
                    app:strokeColor="#3D5AFE"
                    app:strokeWidth="2dp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"/>

                <TextView
                    android:id="@+id/descText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 5 попыток\n• Лимит времени: 30 сек\n• С подсказками"
                    android:textColor="#B0B0FF"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Средний уровень -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#20234A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="#00E676"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mediumButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Средний"
                    android:textSize="18sp"
                    android:textColor="#00E676"
                    app:strokeColor="#00E676"
                    app:strokeWidth="2dp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"/>

                <TextView
                    android:id="@+id/descText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 3 попытки\n• Лимит времени: 20 сек\n• Без подсказок"
                    android:textColor="#B0FFD0"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Сложный уровень -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#20234A"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="#FF4081"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/hardButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Сложный"
                    android:textSize="18sp"
                    android:textColor="#FF4081"
                    app:strokeColor="#FF4081"
                    app:strokeWidth="2dp"
                    app:cornerRadius="8dp"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"/>

                <TextView
                    android:id="@+id/descText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 1 попытка\n• Лимит времени: 10 сек\n• Без подсказок"
                    android:textColor="#FFB0C0"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Версия приложения -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textColor="@color/white_60"
            android:layout_marginTop="40dp"
            android:textSize="12sp"/>

    </LinearLayout>

</ScrollView>