<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDC0BB"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="top"
        android:layout_marginTop="20dp"
        android:background="#FFF6F0" />

    <!-- Кнопка "Добавить жест" -->
    <Button
        android:id="@+id/add_gesture_button"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3F51B5"
        android:padding="16dp"
        android:text="Добавить жест"
        android:textColor="#FFFFFF" />

    <!-- Текст "Введите число жестами" -->
    <TextView
        android:id="@+id/number_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:text="Введите букву жестами"
        android:textColor="#141414"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Область для рисования жестов -->
    <android.gesture.GestureOverlayView
        android:id="@+id/gestureOverlay"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/editbox_background"
        android:fadeEnabled="false"
        android:gestureColor="#FF4081"
        android:gestureStrokeWidth="5.0" />

    <!-- Кнопка "Проверить число" -->
    <Button
        android:id="@+id/check_button"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#3F51B5"
        android:padding="16dp"
        android:text="Обработать букву"
        android:textColor="#FFFFFF" />

    <!-- Имя разработчика -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Разработчик: Головач Кирилл Александрович ПО-11"
        android:textColor="#880D0C0C"
        android:textSize="14sp" />
</LinearLayout>
