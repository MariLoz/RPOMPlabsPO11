<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8ABAB"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextImagePath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите путь к изображению" />

    <EditText
        android:id="@+id/editTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:drawableTint="#3F51B5"
        android:foregroundTint="#3F51B5"
        android:hint="Введите номер заметки"
        android:textColor="#3F51B5" />

    <EditText
        android:id="@+id/editTextNewNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:drawableTint="#3F51B5"
        android:foregroundTint="#3F51B5"
        android:hint="Введите новый текст"
        android:textColor="#3F51B5" />

    <Button
        android:id="@+id/buttonUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="Обновить" />
</LinearLayout>
