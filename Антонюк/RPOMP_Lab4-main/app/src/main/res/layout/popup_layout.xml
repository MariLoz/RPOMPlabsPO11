<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF6F0"
    android:gravity="center"
    android:padding="24dp">

    <!-- Заголовок инструкции -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Инструкция"
        android:textSize="24sp"
        android:textColor="#FF4081"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textStyle="bold" />

    <!-- Текст инструкции -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Введите идентификатор журнала.\n2. Нажмите кнопку 'Скачать'."
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <!-- Чекбокс "Больше не показывать" -->
    <CheckBox
        android:id="@+id/dontShowAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Больше не показывать"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <!-- Кнопка "ОК" -->
    <Button
        android:id="@+id/okButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="ОК"
        android:backgroundTint="#FF4081"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center" />
</LinearLayout>
