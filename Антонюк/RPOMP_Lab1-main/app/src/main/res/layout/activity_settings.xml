<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:background="#FFF6F0"
    android:orientation="vertical"
    android:padding="24dp">

    <EditText
        android:id="@+id/editTextServerUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL сервера"
        android:padding="16dp"
        android:background="@android:drawable/editbox_background"
        android:textColor="#000000"
        android:textColorHint="#888888" />

    <EditText
        android:id="@+id/editTextRowCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Количество элементов"
        android:inputType="number"
        android:padding="16dp"
        android:background="@android:drawable/editbox_background"
        android:textColor="#000000"
        android:textColorHint="#888888" />

    <Button
        android:id="@+id/buttonSaveSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:backgroundTint="#FF4081"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/textViewCreater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Разработчик: Антонюк Н.А."
        android:textColor="#88FF0404"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

</LinearLayout>
